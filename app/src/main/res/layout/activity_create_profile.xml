<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2312"
    android:orientation="vertical"
    tools:context="com.example.mayur.laundryhome.createProfile">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"/>

    <ImageView
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginTop="9dp"
        android:layout_gravity="center"
        android:src="@drawable/laundry_home"/>

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="235dp"
        android:layout_marginTop="75dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#fff">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#1e77cc"/>

        <EditText
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:id="@+id/txtDhobiName"
            android:hint="Enter Your Name"
            android:maxLines="1"
            android:maxHeight="1dp"
            android:singleLine="true"
            android:textColor="#1e77cc"/>

        <EditText
            android:id="@+id/txtDhobiContactNo"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:inputType="number"
            android:hint="Enter Contact Number"
            android:maxLines="1"
            android:maxLength="106"
            android:singleLine="true"
            android:maxHeight="1dp"
            android:textColor="#1e77cc"/>

        <EditText
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtDhobiAddress"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
            android:hint="Enter Lundry Shop Address"
            android:maxLines="1"
            android:singleLine="true"
            android:maxHeight="1dp"
            android:textColor="#1e77cc"/>

        <Button
            android:layout_width="335dp"
            android:layout_height="44dp"
            android:layout_gravity="center"

            android:text="Create Profile"
            android:background="#e47003"
            android:textColor="#e7e4e4"/>

    </LinearLayout>

</LinearLayout>
